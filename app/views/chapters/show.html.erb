<h1><%= @chapter.name %></h1>

<% if @chapter.sections.any? %>
  <h4>This chapter contains the following sections:</h4>


  <ul>
    <% @chapter.sections.each do |section| %>
    <li>
      <%= section.name %> |
      <%= section.content %> |
      <%= link_to "Edit", edit_chapter_section_path(@chapter, section) %> |
      <%= link_to "Delete", chapter_section_path(@chapter, section),
      :data => {:confirm => "Are you sure?",
        :method => "delete"} %>
    </li>
    <% end %>
  </ul>

  <% else %>
    <p>
      There are no sections yet!
      <%= link_to "Add a New Section", new_chapter_section_path(@chapter) %>
    </p>
  <% end %>

<p><%= link_to "Edit", edit_chapter_path(@chapter) %></p>
<p><%= link_to "Delete", chapter_path(@chapter),
                         :data => { :confirm => "Are you sure?",
                                    :method => "delete" } %></p>

<p><%= link_to "Return to Chapters", chapters_path %></p>
